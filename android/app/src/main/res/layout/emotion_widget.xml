<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootWidget"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:padding="12dp"
    android:background="@drawable/widget_bg"
    android:gravity="center">

    <!-- ข้อความวันนี้คุณรู้สึก... -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="วันนี้คุณรู้สึก"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="12dp" />

    <!-- emotion text -->
    <TextView
        android:id="@+id/txtEmotion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="อารมณ์ดี"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#FFD700"
        android:layout_below="@id/titleText"
        android:layout_alignStart="@id/titleText"
        android:layout_marginTop="6dp" />

    <!-- Glow image -->
    <ImageView
        android:id="@+id/imgGlow"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:src="@drawable/glow_green"
        android:scaleType="centerCrop" />

    <!-- Character image -->
    <ImageView
        android:id="@+id/imgCharacter"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:src="@drawable/green"
        android:scaleType="fitCenter" />

</RelativeLayout>
